<eww>
    <definitions>
        <def name="icons">
            <box orientation="h" space-evenly="true">
                <firefox />
                <code />
                <terminal />
                <document />
                <manager />
                <spotify />
                <chat />
                <vlc />
            </box>
        </def>

        <def name="code">
            <box>    
                <button class="icon code" onclick="bash ~/.config/eww/scripts/code.sh">   </button>
            </box>
        </def>


        <def name="manager">
            <box>    
                <button class="icon manager" onclick="bash ~/.config/eww/scripts/thunar.sh">  </button>
            </box>
        </def>
        <def name="spotify">
            <box>    
                <button class="icon spotify" onclick="bash ~/.config/eww/scripts/spotify.sh">  </button>
            </box>
        </def>
        <def name="vlc">
            <box>    
                <button class="icon vlc" onclick="bash ~/.config/eww/scripts/vlc.sh">  </button>
            </box>
        </def>
        
        <def name="terminal">
            <box>    
                <button class="icon terminal" onclick="bash ~/.config/eww/scripts/terminal.sh">  </button>
            </box>
        </def>
        <def name="firefox">
            <box>    
                <button class="icon firefox" onclick="bash ~/.config/eww/scripts/firefox.sh">  </button>
            </box>
        </def>
        <def name="document">
            <box>    
                <button class="icon document" onclick="bash ~/.config/eww/scripts/document.sh">  </button>
            </box>
        </def>
        <def name="chat">
            <box>    
                <button class="icon chat" onclick="bash ~/.config/eww/scripts/chat.sh">  </button>
            </box>
        </def>
    </definitions>

    <windows>
        <window name="plank">
            <geometry x="22%" y="87%" width="55%" height="11%" />
            <widget width="590px" class="req">
                <icons />
            </widget>
        </window>
    </windows>
</eww>