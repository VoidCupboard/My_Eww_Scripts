<eww>
    <definitions>
        <def name="code">
            <box class="icon" space-evenly="true">    
                <button class="fix code" onclick="bash ~/.config/eww/scripts/open_code.sh">   </button>
            </box>
        </def>

        <def name="terminal">
            <box>    
                <button class="fix terminal" onclick="bash ~/.config/eww/scripts/open_terminal.sh">  </button>
            </box>
        </def>

        <def name="firefox">
            <box>    
                <button class="fix firefox" onclick="bash ~/.config/eww/scripts/open_firefox.sh">  </button>
            </box>
        </def>

        <def name="planner">
            <box>    
                <button class="fix planner" onclick="bash ~/.config/eww/scripts/open_planner.sh">  </button>
            </box>
        </def>
    </definitions>

    <windows>
        <window name="firefox">
            <geometry x="34%" y="88%" width="6%" height="9%" />
            <widget>
                <firefox />
            </widget>
        </window>

        <window name="code">
            <geometry x="42%" y="88%" width="6%" height="9%" />
            <widget>
                <code />
            </widget>
        </window>

        <window name="planner">
            <geometry x="50%" y="88%" width="6%" height="9%" />
            <widget>
                <planner />
            </widget>
        </window>

        <window name="terminal">
            <geometry x="58%" y="88%" width="6%" height="9%" />
            <widget>
                <terminal />
            </widget>
        </window>
    </windows>
</eww>